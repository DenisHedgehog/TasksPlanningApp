<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".models.GoalsFragment">

    <RelativeLayout
        android:id="@+id/first_goal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/first_rounded_goal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="32dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/transparent_bg"
            android:text="+"
            android:textSize="128sp"
            android:textColor="#CCCCCC"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_goal"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:background="@drawable/first_rounded_goal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="@+id/first_goal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/transparent_bg"
            android:text="+"
            android:textSize="128sp"
            android:textColor="#CCCCCC"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/first_rounded_goal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="@+id/second_goal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/transparent_bg"
            android:text="+"
            android:textSize="128sp"
            android:textColor="#CCCCCC"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>